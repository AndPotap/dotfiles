#! /usr/bin/python3
import os

home = os.environ["HOME"]
location = os.getcwd()
web_location = "/home/andpotap" + location[len(home):]


def rsync(do_dry=True):
    code = "nvcr"
    text = "Reverse Dry run"
    if not do_dry:
        code = "vcr"
        text = "Reverse Syncing"
    print(f"{text} from server to local")
    print(f"{text} from {web_location} to {location}/*")
    cmd = f"rsync -{code} webpage:{web_location}/* {location}"
    os.system(cmd)


if __name__ == "__main__":
    aux = input("Sync actual contents (YES - case sensitive) ")
    do_dry = False if aux == "YES" else True
    rsync(do_dry)
