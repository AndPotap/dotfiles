Host gauss
  User andres_p
  HostName gauss.orie.cornell.edu
  LocalForward 8996 localhost:8996
  LocalForward 8998 localhost:8998

Host mint
  User andres_p
  HostName mint.orie.cornell.edu
  LocalForward 8996 localhost:8996
  LocalForward 8998 localhost:8998

Host *.hpc.nyu.edu
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null
  LogLevel ERROR

# first we create the tunnel, with instructions to pass incoming
# packets on ports 8027 and 8028 through it and to specific locations

Host hpc
  HostName gw.hpc.nyu.edu
  ForwardX11 no
  LocalForward 8027 greene.hpc.nyu.edu:22
  LocalForward 8028 peel.hpc.nyu.edu:22
  User ap6604
  PubkeyAuthentication no

# next we create an alias for incoming packets on the port
# The alias corresponds to where the tunnel forwards these packets

Host peel
  HostName localhost
  Port 8028
  ForwardX11 yes
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null
  LogLevel ERROR
  User ap6604

Host greene
  HostName localhost
  Port 8027
  ForwardX11 yes
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null
  LogLevel ERROR
  User ap6604
  #LocalForward 8997 localhost:8997
  LocalForward 8997 greene.hpc.nyu.edu:8997

Host cims
  User ap6604
  StrictHostKeyChecking no
  HostName access.cims.nyu.edu

Host cassio vine* rose* loopy* reopen* weaver*
  User ap6604
  HostName %h.cs.nyu.edu
  ProxyJump cims

Host cuda* crunchy*
  User ap6604
  HostName %h.cims.nyu.edu
  ProxyJump cims
